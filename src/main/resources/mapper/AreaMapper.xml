<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Ryan.mapper.AreaMapper">
    <select id="count" resultType="Integer">
        select count(*) from area
    </select>
    <select id="areasList" resultType="AreaVo">
        select id,name,count(blog.id) as blogsCount from area left join blog on area.id = blog.area_id group by area.id
    </select>
</mapper>
